{
  "version": 2,
  "builds": [
    { "src": "src/api/**/*.js", "use": "@vercel/node" },
    { "src": "package.json",     "use": "@vercel/static-build" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)",  "dest": "/assets/$1" },
    { "src": "/(.*)",         "dest": "/index.html" }
  ]
}